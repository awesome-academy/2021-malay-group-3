<% provide(:title, "Course Registration") %>
<h1>Course Application</h1>
<p>You can apply more than one course.</p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session1, url: apply_path) do |f| %>

      <%= f.label :first_course %>
      <%= f.text_field :first_course, class: 'form-control' %>
      <%= f.label :second_course %>
      <%= f. text_field :second_course, class: 'form-control' %>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.submit "Confirm Registration", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
